<% @body_id = 'home' %>

<div class="homepage-hero-image mb-3 position-relative">
  <img class="lazyload hero-image position-absolute"
    data-src="<%= asset_path('homepage/sidibousaid.jpg') %>"
  
    alt="<%= Spree.t('homepage.summer_collection')%>" />

  <div class="hero-content">
  
    <div>
      <%= link_to Spree.t('homepage.shop_now'), spree.products_path, class: 'btn btn-primary spree-btn px-5' %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">

      <div class="homepage-taxon-box mb-3">
        <%= link_to spree.nested_taxons_path('sucré') do %>
          <img class="w-100 lazyload"
            data-src="<%= asset_path('homepage/sucre.jpeg') %>"
            />

          <div class="homepage-taxon-box-text">
            <h3>Epicerie sucrée</h3>
          </div>
        <% end %>
      </div>

      <div class="homepage-taxon-box">
        <%= link_to spree.nested_taxons_path('salée') do %>
          <img class="w-100 lazyload"
            data-src="<%= asset_path('homepage/salty.webp') %>"
           />

          <div class="homepage-taxon-box-text" role="img" aria-label="<%= Spree.t('homepage.sportswear') %>">
            <h3>Epicerie salée</h3>
          </div>
        <% end %>
      </div>

    </div>

    <div class="col-6 d-flex flex-column">

      <div class="homepage-taxon-box flex-grow-1">
        <%= link_to spree.nested_taxons_path('patisserie') do %>
          <img class="w-100 lazyload"
            data-src="<%= asset_path('homepage/patisserie.jpg') %>"
          
          />

          <div class="homepage-taxon-box-text">
            <h3>Patisserie</h3>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>

<div data-product-carousel data-product-carousel-taxon-id='bestsellers' class="my-3"></div>

<div class="homepage-fashion-trends-box mb-3">
  <div class="text-center">
    <div class="homepage-fashion-trends-box-summer-text mb-1">Qui Somme nous?</div>
    <div class="homepage-fashion-trends-box-fashion-trends-text mb-2">Des pures tunisois!</div>
    <div class="homepage-fashion-trends-box-description-text text-center mb-3">
      <%= Spree.t('homepage.fashion_trends_note') %>
    </div>
    <%= link_to "nos produits", spree.nested_taxons_path('trending'), class: 'btn px-5 spree-btn btn-outline-primary' %>
  </div>
</div>


<div data-product-carousel data-product-carousel-taxon-id='trending' class="mb-3"></div>

<div class="container">
  <div class="row">
    <div class="col-12 col-lg-6">
      <%= link_to spree.nested_taxons_path('aid') do %>
        <div class="homepage-bottom-box text-center mb-3">
          <img class="w-100 lazyload"
            data-src="<%= asset_path('homepage/brochette.jpeg') %>"
            />

          <div class="homepage-bottom-box-inner" role="img" aria-label="<%= Spree.t('homepage.new_collection') %>">
            <div class="homepage-bottom-box-inner-small-text">
              tout ce que vous avez besion
            </div>
            <div class="homepage-bottom-box-inner-big-text">
             Spéciale Aid
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="col-12 col-lg-6">
      <%= link_to spree.nested_taxons_path('mouled') do %>
        <div class="homepage-bottom-box text-center mb-3">
          <img class="w-100 lazyload"
            data-src="<%= asset_path('homepage/asida.jpeg') %>"
            />

          <div class="homepage-bottom-box-inner">
            <div class="homepage-bottom-box-inner-small-text">
              mouled
            </div>
            <div class="homepage-bottom-box-inner-big-text">
             Spéciale mouled
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
